  "version": "0.2.0",
  "configurations": [
    {
      "name": "Current TS File",
      "type": "node",
      "request": "launch",
      "console": "integratedTerminal",
      "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/nodemon.cmd",
      "runtimeArgs": [

 
      ],
      "args":[
        "--watch",
        "src/**/*.ts",
        "--ignore",
        "public",
        "--exec",
        "node",
        "-r",
        "ts-node/register",
        "src/main.ts",
      ],
      "restart": true,
      "autoAttachChildProcesses": true,
      "sourceMaps": true,
      "cwd": "${workspaceRoot}",
      "protocol": "inspector",
    }
  ]
}
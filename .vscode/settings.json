{
  "[typescript]": {
    "editor.formatOnSave": true
  },
  "[javascript]": {
    "editor.formatOnSave": true
  },
  "[json]": {
    "editor.formatOnSave": false
  },
  "[jsonc]": {
    "editor.formatOnSave": false
  },
  "prettier.tslintIntegration": true,
  "files.insertFinalNewline": true,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "node_modules": true,
    "dist": true
  },
  "TodoParser": {
    "exclude": ["js"],
    "include": ["ts"],
    "only": ["src"],
    "showInProblems": true,
    "markers": ["NOTE:", "REMINDER:", ["FIXME", "Warning"]],
    "autoDefaultMarkers": true
  }
}
